{
  "defaultSeverity": "error",
  "extends": ["tslint:all", "tslint-eslint-rules", "tslint-config-prettier"],
  "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules"],
  "linterOptions": { "exclude": [".ignore/"] },
  "jsRules": {},
  "rules": {
    // tslint: type-script specific
    "member-access": {
      "options": [
        "no-public",
        "check-accessor",
        "check-constructor",
        "check-parameter-property"
      ]
    },
    "member-ordering": [true, { "order": "fields-first" }],
    "only-arrow-functions": [true, "allow-declarations"],
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      // omitted: variable-declaration
      "member-variable-declaration"
    ],

    // tslint: functionality
    "curly": [true, "ignore-same-line"],
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "strict-boolean-expressions": false,

    // tslint: maintainability
    "no-default-export": false,
    "no-default-import": false,

    // tslint: style
    "comment-format": false,
    "completed-docs": [
      true,
      "classes",
      "enums",
      "enum-members",
      "functions",
      "interfaces",
      "methods",
      "namespaces"
      // "properties"
      // "types"
    ],
    "file-name-casing": [false, "camel-case"],
    "interface-name": [true, "never-prefix"],
    "interface-over-type-literal": false,
    "no-parameter-properties": false,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,

    // tslint: formatting
    "newline-before-return": false,

    // eslint
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-inner-declarations": [true, "function"],
    "no-invalid-regexp": true,
    "ter-no-irregular-whitespace": [true],
    "no-regex-spaces": true,
    "ter-no-sparse-arrays": [true],
    "no-unexpected-multiline": true,
    "valid-typeof": true,
    "ter-no-proto": true,
    "ter-no-self-compare": true,
    "ter-prefer-arrow-callback": [true]
    // deprecated: use eslint-plugin-jsdoc instead
    // "valid-jsdoc": [true]
  }
}
